<div class="main">
  <h1>ユーザー登録</h1>
    <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
    <% end %>

    <%= form_tag("/users/create") do%>
      <p>ユーザー名</p>
      <input name="name" value="<%= @user.name %>">

      <p>メールアドレス</p>
      <input name="email"value="<%= @user.email %>">
      <input type="submit" value="新規登録">
    <%end%>
</div>
